{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "kokkoro",
  "description": "可可萝配置文件",
  "type": "object",
  "properties": {
    "server": {
      "type": "object",
      "description": "web 服务配置",
      "properties": {
        "port": {
          "description": "API 端口号",
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "domain": {
          "description": "域名",
          "type": "string"
        }
      }
    },
    "log_level": {
      "description": "日志等级，打印日志会降低性能，若消息量巨大建议修改此参数",
      "type": "string",
      "enum": ["OFF", "FATAL", "ERROR", "WARN", "INFO", "DEBUG", "TRACE", "ALL"]
    },
    "bots": {
      "type": "array",
      "description": "bot 信息，可添加多个",
      "minProperties": 1,
      "items": {
        "properties": {
          "appid": {
            "description": "机器人 ID",
            "type": "string"
          },
          "token": {
            "description": "机器人令牌",
            "type": "string"
          },
          "secret": {
            "description": "机器人密钥",
            "type": "string"
          },
          "log_level": {
            "description": "日志等级，打印日志会降低性能，若消息量巨大建议修改此参数",
            "type": "string",
            "enum": ["OFF", "FATAL", "ERROR", "WARN", "INFO", "DEBUG", "TRACE", "ALL"]
          },
          "auto_online": {
            "description": "自动连接",
            "type": "boolean"
          },
          "events": {
            "description": "订阅的机器人事件",
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "GUILDS",
                "GUILD_MEMBERS",
                "GUILD_MESSAGES",
                "GUILD_MESSAGE_REACTIONS",
                "DIRECT_MESSAGE",
                "GROUP_MESSAGES",
                "INTERACTION",
                "MESSAGE_AUDIT",
                "FORUMS_EVENT",
                "AUDIO_ACTION",
                "PUBLIC_GUILD_MESSAGES"
              ]
            },
            "max_retry": {
              "description": "掉线重连数，默认 3",
              "type": "number"
            }
          },
          "plugins": {
            "description": "启用的插件服务，若为空则默认启用所有插件",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
